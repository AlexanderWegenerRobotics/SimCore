<mujoco model="world">
    <compiler angle="radian" autolimits="true"/>
    <option integrator="implicitfast" timestep="0.002"/>

    <visual>
        <headlight ambient="0.3 0.3 0.3" diffuse="0.6 0.6 0.6"/>
    </visual>

    <asset>
        <texture type="2d" name="floor_tex" builtin="checker"
                 rgb1="0.3 0.3 0.3" rgb2="0.5 0.5 0.5" width="512" height="512"/>
        <material name="floor_mat" texture="floor_tex" texrepeat="4 4" reflectance="0.1"/>
    </asset>

    <include file="../robots/pan_tilt_dummy/pan_tilt_dummy.xml"/>

    <worldbody>
        <light pos="0 0 2.5" dir="0 0 -1" diffuse="0.8 0.8 0.8" specular="0.2 0.2 0.2"/>

        <geom name="floor" type="plane" size="3 3 0.1" material="floor_mat"/>

        <camera name="scene_cam" pos="0.5 -0.8 0.6" euler="0 0.6 1.5708" fovy="60"/>

        <body name="ref_box" pos="0.5 0 0.05">
            <geom type="box" size="0.05 0.05 0.05" rgba="0.8 0.2 0.2 1"/>
        </body>
        <body name="ref_sphere" pos="0.4 0.3 0.05">
            <geom type="sphere" size="0.04" rgba="0.2 0.8 0.2 1"/>
        </body>

    </worldbody>

</mujoco>